<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- 上下左右移动按钮 -->
    <ImageButton
        android:id="@+id/moveLeftButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/keyboard_arrow_left_24px" />

    <ImageButton
        android:id="@+id/moveUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/keyboard_arrow_up_24px" />
    <ImageButton
        android:id="@+id/moveDownButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/keyboard_arrow_down_24px" />
    <ImageButton
        android:id="@+id/moveRightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/keyboard_arrow_right_24px" />
    <!-- ... 其他按钮（右、下） -->

    <!-- 左键和右键 -->
    <ImageButton
        android:id="@+id/leftMouseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/keyboard_arrow_left_24px" />

    <ImageButton
        android:id="@+id/rightMouseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/keyboard_arrow_right_24px" />

    <!-- 滚动条（可能需要自定义或使用SeekBar） -->
    <SeekBar
        android:id="@+id/scrollBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100" />

</LinearLayout>